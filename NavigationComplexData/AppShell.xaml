<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NavigationComplexData.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NavigationComplexData"
    xmlns:views="clr-namespace:NavigationComplexData.Resources.Views"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
      Title="Home"
      ContentTemplate="{DataTemplate local:MainPage}"
      Route="MainPage" />

    <ShellContent
      Title="Testing"
      ContentTemplate="{DataTemplate views:TestingPage}"
      Route="TestingPage" />

    <ShellContent
      Title="Clients"
      ContentTemplate="{DataTemplate views:ClientsPage}"
      Route="ClientsPage" />

    <!--<ShellContent
      Title="ClientDetails"
      ContentTemplate="{DataTemplate views:ClientDetailsPage}"
      Route="ClientDetailsPage" />-->

    <ShellContent
      Title="Tabs (Don't click)"
      ContentTemplate="{DataTemplate views:TabbedPageNavigation}"
      Route="TabbedPageNavigation" />

</Shell>